{
  "theme": "custom",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "showBasename": true },
          "model": { "enabled": true },
          "contextprogressbar": { "enabled": true }
        }
      },
      {
        "segments": {
          "session": { "enabled": true, "type": "duration" },
          "block": { "enabled": true, "type": "time" }
        }
      }
    ]
  },
  "colors": {
    "custom": {
      "directory": { "bg": "#2a2a2a", "fg": "#e0e0e0" },
      "model": { "bg": "#4a4a4a", "fg": "#c0c0c0" },
      "context": { "bg": "#6a6a6a", "fg": "#ffffff" },
      "session": { "bg": "#5a5a5a", "fg": "#b0b0b0" },
      "block": { "bg": "#404040", "fg": "#cccccc" }
    }
  }
}
